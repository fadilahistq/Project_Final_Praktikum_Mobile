<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjectFInalPraktikumMobile" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="actionBarStyle">@style/PinkActionBarStyle</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Pink_Lavender</item>
        <item name="colorPrimaryVariant">@color/Pink_Lavender</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="PinkActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">@color/Pink_Lavender</item>
    </style>
</resources>